{
	"name": "wmflab/lists",
	"description": "The lists tool",
	"keywords": ["lists", "wikimedia", "wikipedia", "wmflab", "laravel"],
	"license": "AGPL-3.0",
	"type": "project",
	"homepage": "http://tools.wmflabs.org/lists",
	"authors": [
		{
			"name": "Fabio Alessandro Locati",
			"email": "fabiolocati@gmail.com",
			"homepage": "http://fabiolocati.com",
			"role": "Developer"
		}
	],
	"require": {
		"laravel/framework": "4.0.*",
		"easybook/geshi": "dev-master",
		"dflydev/markdown": "v1.0.2"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
